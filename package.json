{
  "name": "runner",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "scripts": {
    "test": "npm run test:ui && npm run test:api",
    "test:ui": "jest --ci --coverage --config ./jest-ui.config.js",
    "test:api": "jest --ci --coverage --config ./jest-api.config.js",
    "serve:api": "nodemon --exec \"npm run build:api && npm start\" -w ./src/api -e \"ts\"",
    "serve:ui": "parcel ./src/ui/index.html  --dist-dir ./dist/ui",
    "serve": "concurrently \"npm run serve:api\" \"npm run serve:ui\"",
    "build:api": "tsc -P tsconfig.api.json",
    "build:ui": "parcel build ./src/ui/index.html --dist-dir ./dist/ui",
    "build:watch": "concurrently \"parcel watch ./src/ui/index.html --dist-dir ./dist/ui --no-hmr\" \"tsc -P tsconfig.api.json -w\"",
    "start:watch": "nodemon -w ./dist/api --exec \"npm start\"",
    "prebuild": "rm -rf dist",
    "build": "concurrently \"npm run build:api\" \"npm run build:ui\"",
    "premigration:create": "npm run build:api",
    "migration:create": "npx mikro-orm migration:create",
    "start": "node ./dist/api/main"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
