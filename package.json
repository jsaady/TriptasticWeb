{
  "name": "runner",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "scripts": {
    "test": "jest --ci --coverage",
    "serve:api": "nodemon --exec \"npm run build:api && npm start\" -w ./src/api -e \"ts\"",
    "serve:ui": "parcel ./src/ui/index.html",
    "serve": "concurrently \"npm run serve:api\" \"npm run serve:ui\"",
    "build:api": "tsc -P tsconfig.api.json",
    "build:ui": "parcel build ./src/ui/index.html --dist-dir ./dist/ui",
    "build": "concurrently \"npm run build:api\" \"npm run build:ui\"",
    "start": "node ./dist/api/main"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@nestjs/testing": "^10.1.2",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.5",
    "@types/react": "^18.2.16",
    "@types/react-dom": "^18.2.7",
    "concurrently": "^8.2.0",
    "jest": "^29.6.1",
    "nodemon": "^3.0.1",
    "parcel": "^2.9.3",
    "process": "^0.11.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@nestjs/common": "^10.1.2",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.1.2",
    "@nestjs/platform-express": "^10.1.2",
    "express": "^4.18.2",
    "postgres": "^3.3.5",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  }
}
